---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import { projects } from "../../data/projects";

export function getStaticPaths() {
  return projects.map((project) => ({
    params: { id: project.id },
    props: { project },
  }));
}

const { project } = Astro.props;
---

<Layout title={`${project.title} | Aji's Portfolio`}>
  <Navbar />
  <main class="pt-28 pb-24 px-6">
    <div class="max-w-4xl mx-auto">
      <!-- Back link -->
      <a
        href="/#projects"
        class="inline-flex items-center gap-2 text-sm text-text-muted hover:text-primary-light transition-colors mb-8 group"
      >
        <svg class="w-4 h-4 transition-transform group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to projects
      </a>

      <!-- Hero banner -->
      <div class="relative h-64 md:h-80 rounded-2xl overflow-hidden mb-12">
        <div class={`absolute inset-0 bg-gradient-to-br ${project.color} opacity-90`}></div>
        <img
          src={project.image}
          alt={project.title}
          class="w-full h-full object-cover mix-blend-overlay opacity-40"
          onerror="this.style.display='none'"
        />
        <div class="absolute inset-0 flex flex-col justify-end p-8 md:p-12">
          <span class="inline-block w-fit px-3 py-1 text-xs font-semibold uppercase tracking-wider bg-black/30 backdrop-blur-sm rounded-full text-white mb-4">
            {project.category}
          </span>
          <h1 class="text-4xl md:text-5xl font-extrabold text-white mb-2">{project.title}</h1>
          <p class="text-white/80 text-lg">{project.subtitle}</p>
        </div>
      </div>

      <!-- Content grid -->
      <div class="grid lg:grid-cols-3 gap-8">
        <!-- Main content -->
        <div class="lg:col-span-2 space-y-8">
          <!-- About this project -->
          <div class="glass rounded-2xl p-8">
            <h2 class="text-xl font-bold mb-6">About This Project</h2>
            <div class="prose prose-invert max-w-none space-y-4">
              {project.longDescription.split("\n\n").map((paragraph: string) => (
                <p class="text-text-muted leading-relaxed">{paragraph}</p>
              ))}
            </div>
          </div>

          <!-- Key features -->
          <div class="glass rounded-2xl p-8">
            <h2 class="text-xl font-bold mb-6">Key Features</h2>
            <ul class="space-y-3">
              {project.features.map((feature: string) => (
                <li class="flex items-start gap-3">
                  <div class="mt-1 w-5 h-5 rounded-full bg-primary/20 flex items-center justify-center shrink-0">
                    <svg class="w-3 h-3 text-primary-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
                    </svg>
                  </div>
                  <span class="text-text-muted">{feature}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
          <!-- Tech stack -->
          <div class="glass rounded-2xl p-6">
            <h3 class="text-sm font-semibold uppercase tracking-wider text-text-muted mb-4">Tech Stack</h3>
            <div class="flex flex-wrap gap-2">
              {project.technologies.map((tech: string) => (
                <span class="px-3 py-1.5 text-xs font-mono text-text bg-surface-lighter/60 rounded-lg border border-border/40">
                  {tech}
                </span>
              ))}
            </div>
          </div>

          <!-- Quick info -->
          <div class="glass rounded-2xl p-6">
            <h3 class="text-sm font-semibold uppercase tracking-wider text-text-muted mb-4">Quick Info</h3>
            <div class="space-y-3">
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 rounded-lg bg-primary/10 flex items-center justify-center">
                  <svg class="w-4 h-4 text-primary-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                  </svg>
                </div>
                <div>
                  <p class="text-xs text-text-muted">Category</p>
                  <p class="text-sm font-medium capitalize">{project.category}</p>
                </div>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 rounded-lg bg-primary/10 flex items-center justify-center">
                  <svg class="w-4 h-4 text-primary-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                </div>
                <div>
                  <p class="text-xs text-text-muted">Highlights</p>
                  <p class="text-sm font-medium">{project.highlights}</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Back button -->
          <a
            href="/#projects"
            class="block w-full text-center px-6 py-3 glass glass-hover rounded-xl text-sm font-semibold transition-all duration-300 hover:-translate-y-0.5"
          >
            View All Projects
          </a>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>
